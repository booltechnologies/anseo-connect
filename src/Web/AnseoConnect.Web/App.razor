<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(App).Assembly"
            AdditionalAssemblies="new[] { typeof(AnseoConnect.UI.Shared.Layouts.AppLayout).Assembly }">
        <Found Context="routeData">
            <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(AnseoConnect.UI.Shared.Layouts.AppLayout)">
                <NotAuthorized>
                    <LayoutView Layout="@typeof(AnseoConnect.UI.Shared.Layouts.AppLayout)">
                        <p>You are not authorized. Please <NavLink href="/signin">sign in</NavLink>.</p>
                    </LayoutView>
                </NotAuthorized>
            </AuthorizeRouteView>
            <FocusOnNavigate RouteData="@routeData" Selector="h1" />
        </Found>
        <NotFound>
            <PageTitle>Not found</PageTitle>
            <LayoutView Layout="@typeof(AnseoConnect.UI.Shared.Layouts.AppLayout)">
                <p role="alert">Sorry, there's nothing at this address.</p>
            </LayoutView>
        </NotFound>
    </Router>
</CascadingAuthenticationState>
