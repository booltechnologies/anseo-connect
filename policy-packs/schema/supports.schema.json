{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://anseo.ie/schemas/policy-pack/supports.schema.json",
  "title": "Supports catalogue module schema (Anseo Connect)",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "enabled",
    "version",
    "supports",
    "recommendations"
  ],
  "properties": {
    "enabled": {
      "type": "boolean"
    },
    "version": {
      "type": "string",
      "minLength": 1
    },
    "supports": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "id",
          "label",
          "owners",
          "defaultSlaDays",
          "barrierTags"
        ],
        "properties": {
          "id": {
            "type": "string",
            "minLength": 1
          },
          "label": {
            "type": "string",
            "minLength": 1
          },
          "owners": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "minItems": 1
          },
          "defaultSlaDays": {
            "type": "integer",
            "minimum": 0
          },
          "barrierTags": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "minItems": 0
          }
        }
      },
      "minItems": 1
    },
    "recommendations": {
      "type": "object",
      "additionalProperties": true,
      "required": [
        "enabled"
      ],
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "topN": {
          "type": "integer",
          "minimum": 1,
          "maximum": 50
        },
        "rules": {
          "type": "array",
          "items": {
            "type": "object"
          },
          "minItems": 0
        }
      }
    }
  }
}