{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://anseo.ie/schemas/policy-pack/reason-taxonomy.schema.json",
  "title": "Reason taxonomy module schema (Anseo Connect)",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "enabled",
    "countryDefaults",
    "schoolOverrides"
  ],
  "properties": {
    "enabled": {
      "type": "boolean"
    },
    "countryDefaults": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "scheme",
          "version",
          "codes"
        ],
        "properties": {
          "scheme": {
            "type": "string",
            "minLength": 1
          },
          "version": {
            "type": "string",
            "minLength": 1
          },
          "codes": {
            "type": "array",
            "items": {
              "type": "object",
              "additionalProperties": false,
              "required": [
                "code",
                "label",
                "type"
              ],
              "properties": {
                "code": {
                  "type": "string",
                  "minLength": 1
                },
                "label": {
                  "type": "string",
                  "minLength": 1
                },
                "type": {
                  "type": "string",
                  "minLength": 1
                }
              }
            },
            "minItems": 1
          }
        }
      }
    },
    "schoolOverrides": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "allowCustomCodes",
        "allowRelabel",
        "allowDisable"
      ],
      "properties": {
        "allowCustomCodes": {
          "type": "boolean"
        },
        "allowRelabel": {
          "type": "boolean"
        },
        "allowDisable": {
          "type": "boolean"
        }
      }
    },
    "ukMappingLayer": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "enabled",
        "targetScheme",
        "notes",
        "defaultMappings"
      ],
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "targetScheme": {
          "type": "string",
          "minLength": 1
        },
        "notes": {
          "type": "string"
        },
        "defaultMappings": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": [
              "ieCode",
              "ukCodeFamily",
              "description"
            ],
            "properties": {
              "ieCode": {
                "type": "string",
                "minLength": 1
              },
              "ukCodeFamily": {
                "type": "string",
                "minLength": 1
              },
              "description": {
                "type": "string",
                "minLength": 1
              }
            }
          },
          "minItems": 0
        }
      }
    }
  }
}